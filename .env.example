# Azure Key Vault Configuration (Optional - if not set, will use environment variables directly)
# If configured, all other secrets will be fetched from Key Vault
AZURE_KEYVAULT_URL=https://your-keyvault-name.vault.azure.net/

# Azure Authentication (Required only if using Key Vault with Service Principal)
# Leave empty to use DefaultAzureCredential (Managed Identity, Azure CLI, etc.)
AZURE_CLIENT_ID=
AZURE_CLIENT_SECRET=
AZURE_TENANT_ID=

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
NEXT_PUBLIC_DEV_SUPABASE_REDIRECT_URL=http://localhost:3000

# Stripe Configuration (Required)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs (Required)
NEXT_PUBLIC_MASTER_GROWER_MONTHLY_PRICE_ID=price_xxxxxxxxxxxxx
NEXT_PUBLIC_MASTER_GROWER_YEARLY_PRICE_ID=price_xxxxxxxxxxxxx
NEXT_PUBLIC_CONSULTATION_1HR_PRICE_ID=price_xxxxxxxxxxxxx
NEXT_PUBLIC_CONSULTATION_3HR_PRICE_ID=price_xxxxxxxxxxxxx
NEXT_PUBLIC_CONSULTATION_FULLDAY_PRICE_ID=price_xxxxxxxxxxxxx
NEXT_PUBLIC_CONSULTATION_RETAINER_PRICE_ID=price_xxxxxxxxxxxxx
NEXT_PUBLIC_FACILITY_SETUP_PRICE_ID=price_xxxxxxxxxxxxx
NEXT_PUBLIC_CUSTOM_AI_TRAINING_PRICE_ID=price_xxxxxxxxxxxxx
NEXT_PUBLIC_MASTER_COURSE_PRICE_ID=price_xxxxxxxxxxxxx
NEXT_PUBLIC_VISION_10_PRICE_ID=price_xxxxxxxxxxxxx
NEXT_PUBLIC_VISION_50_PRICE_ID=price_xxxxxxxxxxxxx
NEXT_PUBLIC_VISION_100_PRICE_ID=price_xxxxxxxxxxxxx
NEXT_PUBLIC_VIDEO_5_PRICE_ID=price_xxxxxxxxxxxxx
NEXT_PUBLIC_VIDEO_20_PRICE_ID=price_xxxxxxxxxxxxx

# AI Services (Required)
AZURE_AI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_AI_API_KEY=your_azure_openai_api_key

# Additional AI Services (Optional)
OPENAI_API_KEY=sk-your_openai_api_key
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key

# Other Services (Optional)
RESEND_API_KEY=re_your_resend_api_key
BLOB_READ_WRITE_TOKEN=vercel_blob_your_token
CDP_WEBSOCKET_URL=wss://your-cdp-url
ONKERNEL_API_KEY=your_onkernel_api_key

# Application Configuration
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NODE_ENV=development
